<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.JetTweet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="background">@color/light_background</item>
        <item name="colorSecondary">@color/twitter_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_background_status</item>
        <item name="android:navigationBarColor">@color/light_background_status</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">?attr/isLightTheme</item>
    </style>
    <style name="Theme.JetTweet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>